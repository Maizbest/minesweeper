{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ build solution",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\glad.c",
                "-lopengl32",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}\\build\\minesweeper.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}